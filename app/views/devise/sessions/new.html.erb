<div class="login">
<div class="loginContent" >
  <h2 class="loginTitle">INICIAR SESIÓN</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :Email, class:"labelLogin" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"inputLogin" %>
    </div>

    <div class="field">
      <%= f.label :Contraseña, class:"labelLogin" %><br />
      <%= f.password_field :password, autocomplete: "off", class:"inputLogin" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me , class:"checkLogin"%>
        <%= f.label :recordar %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Iniciar Sesión" , class:"buttonLogin" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>


</div>
