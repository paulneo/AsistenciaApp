<div class="head ">
  <div class="container headList">
    <h1>Lista de Eventos</h1>
    <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete , class:"white"%>
  </div>
</div>
<div class="menu">
  <div class="container">
    <ul class="">
      <li><%= link_to 'Personas', people_path  ,class:""%></li>
      <li><%= link_to 'Periodos', periods_path  ,class:""%></li>
      <li><%= link_to 'Eventos', events_path  ,class:""%></li>
      <li><%= link_to 'Matricula', student_enrollments_path  ,class:""%></li>
      <li><%= link_to 'Asistencia', student_assistances_path  ,class:""%></li>
      <li><%= link_to 'Evento Programado', scheduled_events_path  ,class:""%></li>
    </ul>
  </div>
</div>
<div class="container">
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Lugar</th>
      <th>Tiempo de Tolerancia</th>
      <th>Estado</th>
      <th>Longitud</th>
      <th>Latitud</th>
      <th>Periodo</th>
      <th>opciones</th>
    </tr>
  </thead>
  <tbody>


        <% @events.each do |f| %>
          <tr>
            <td><%= f.name%> </td>
            <td><%= f.place%> </td>
            <td><%= f.time_tolerance%> </td>
            <td><%= f.state%> </td>
            <td><%= f.longitude%> </td>
            <td><%= f.latitude%> </td>
            <td><%= f.period.name%> </td>

            <td>
              <%= link_to  event_path(id:f.id) do %>
                  Ver
                <% end %>
                <%= link_to edit_event_path(f) do  %>
                  Editar
                <% end %>
                <%= link_to  event_path(f), method: :delete , data: { confirm: 'Â¿Estas Seguro?' } do %>
                  Eliminar
                <% end %>
            </td>
          </tr>
        <%end%>


  </tbody>
</table>
<p><%= link_to new_event_path, class:"boton" do %>
      Nuevo
  <% end %>
</p>
</div>
