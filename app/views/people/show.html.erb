<p>
  <strong>Name:</strong>
  <%= @person.name%>
</p>
<p>
  <strong>Apellido:</strong>
  <%= @person.lastName%>
</p>
<p>
  <strong>Apellido:</strong>
  <%= @person.email%>
</p>
<p>
  <strong>Dni:</strong>
  <%= @person.dni%>
</p>
<p>
  <strong>Celular:</strong>
  <%= @person.cellphone%>
</p>

<table class="qr-code">
<% @qr.modules.each_index do |x| %>
  <tr>
  <% @qr.modules.each_index do |y| %>
   <% if @qr.dark?(x,y) %>
    <td class="black"/>
   <% else %>
    <td class="white"/>
   <% end %>
  <% end %>
  </tr>
<% end %>
</table>
