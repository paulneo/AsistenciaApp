<div class="head ">
  <div class="container headList">
    <h1>Lista de Estudiantes</h1>
    <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete , class:"white"%>
  </div>
</div>

<div class="container">
  <%= link_to new_person_path, class:"" do %>
    <i class="fa fa-plus-circle addStudent"></i> Nuevo
  <% end %>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Correo</th>
      <th>Dni</th>
      <th>Celular</th>
      <th>opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do  |f|  %>
      <tr>
        <td><%= f.name%> </td>
        <td><%= f.lastName%> </td>
        <td><%= f.email%> </td>
        <td><%= f.dni%> </td>
        <td><%= f.cellphone%> </td>

        <td class="option">
          <%= link_to  person_path(id:f.id) do %>
              ver
            <% end %>
            <%= link_to  edit_person_path(f) do  %>
              editar
            <% end %>
            <%= link_to  person_path(f), method: :delete , data: { confirm: 'Â¿Estas Seguro?' } do %>
              eliminar
            <% end %>
        </td>
      </tr>
    <%end%>

  </tbody>
</table>
</div>
