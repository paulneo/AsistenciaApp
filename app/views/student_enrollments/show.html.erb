<div class="formulario">

<p>
  <strong>Alumno:</strong>
  <%= @student_enrollment.person.name%>
  <%= @student_enrollment.person.lastName%>
</p>
<p>
  <strong>Codigo:</strong>
  <%= @student_enrollment.person.dni%>

</p>
<p>
  <strong>Periodo:</strong>
  <%= @student_enrollment.period.name%>
</p>
<p>
  <strong>Horas:</strong>
  <%= @student_enrollment.hours%>
</p>

<table class="qr-code">
<% @qr.modules.each_index do |x| %>
  <tr>
  <% @qr.modules.each_index do |y| %>
   <% if @qr.dark?(x,y) %>
    <td class="black"/>
   <% else %>
    <td class="white"/>
   <% end %>
  <% end %>
  </tr>
<% end %>
</table>
<br />
<br />
<p class="button"><%= link_to 'regresar', student_enrollments_path  ,class:"white"%></p>
</div>
