<div class="head ">
  <div class="container headList">
    <h1>Lista de Alumnos Matriculados</h1>
    <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete , class:"white"%>
  </div>
</div>
<div class="menu">
  <div class="container">
    <ul class="">
      <li><%= link_to 'Personas', people_path  ,class:""%></li>
      <li><%= link_to 'Periodos', periods_path  ,class:""%></li>
      <li><%= link_to 'Eventos', events_path  ,class:""%></li>
      <li><%= link_to 'Matricula', student_enrollments_path  ,class:""%></li>
      <li><%= link_to 'Asistencia', student_assistances_path  ,class:""%></li>
      <li><%= link_to 'Evento Programado', scheduled_events_path  ,class:""%></li>
    </ul>
  </div>
</div>
<div class="container">
  <%= link_to new_student_enrollment_path, class:"" do %>
    <i class="fa fa-plus-circle addStudent"></i> Nuevo
  <% end %>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Periodo</th>
      <th>Fecha Inicio</th>
      <th>Fecha Fin</th>
      <th>Horas</th>
      <th>opciones</th>
    </tr>
  </thead>
  <tbody>


        <% @student_enrollments.each do |f| %>
          <tr>
            <td><%= f.person.name%> </td>
            <td><%= f.person.lastName%> </td>
            <td><%= f.period.name%> </td>
            <td><%= f.period.date_init%> </td>
            <td><%= f.period.date_finish%> </td>
            <td><%= f.hours%> </td>
            <td>
              <%= link_to  student_enrollment_path(id:f.id) do %>
                  ver
                <% end %>
                <%= link_to edit_student_enrollment_path(f) do  %>
                  editar
                <% end %>
                <%= link_to  student_enrollment_path(f), method: :delete , data: { confirm: 'Â¿Estas Seguro?' } do %>
                  eliminar
                <% end %>
            </td>
          </tr>
        <%end%>


  </tbody>
</table>
<p><%= link_to new_student_enrollment_path, class:"white" do %>
      Nuevo
  <% end %>
</p>
